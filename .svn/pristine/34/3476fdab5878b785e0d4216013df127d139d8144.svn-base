html{
	background-color: #fff;
}
body {
	font-family: "\5FAE\8F6F\96C5\9ED1", "Microsoft Yahei", "Hiragino Sans GB", tahoma, "\5B8B\4F53" !important;
    font-size: 14px;
    line-height: 1.5;
    color: #60747b;
}

ul {
	list-style: none;
	padding: 0;
}

/* header */
.header {
	height: 70px;
	width: 100%;
	color: #287ba7;
	background: #f3f4f8;
	vertical-align: middle;
	position: fixed;
    top: 0;
    z-index: 9999;
}

.logo {
	height: 100%;
	line-height: 70px;
	width: 150px;
	background: #7acae1;
	color: #fff;
	text-align: center;
	vertical-align: middle;
	 float: left;
}

.user-info {
	height: 100%;
	line-height: 70px;
	float: right;
	margin-right: 100px;
	color: #74849b;
}

/* left-nav */

.left-col {
	width: 150px;
    height: 100%;
    position: fixed;
    color: #7acae3;
    background-color: #2d343a;
    top: 70px;
    left: 0;
}

.left-col > ul {
    list-style: none;
    padding: 0;
}

.left-col > ul a {
	height: 170px;
    line-height: 170px;
    width: 100%;
    color: #7acae1;
    text-align: center;
    display: inline-block;
    text-decoration: none;
}

/*.left-col > ul a:hover {
	background: #000;
	color: #108DF9;
}*/

.left-col .nav {
	position: relative;
    width: 100%;
    height: 100%;
    display: inline-block;
}

.left-col .nav-active {
	background: #000;
	color: #7acae1;
}

.left-col .nav-active:after{
	width: 0;
    height: 0;
    border-top: 5px solid transparent;
    border-right: 10px solid #fff;
    border-bottom: 5px solid transparent;
    content: " ";
    position: absolute;
    right: 0px;
    top: 47%
}

/* main-body */
.main-body {
	overflow: hidden;
	margin: 140px 90px 0 200px;
    height: 100%;
}