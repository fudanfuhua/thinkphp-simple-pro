.main-card {
	width: 100%;
	height: 30%;
	background: #fff;
	overflow: hidden;
	margin-bottom: 50px;
}

.card {
	float: left;
	width: 16.5%;
	height: 180px;
	background: #f6f7fb;
	cursor: pointer;
	text-align: center;
	border: 1px solid #D5D5D9;
	border-collapse: collapse;
	z-index: 999;
}

.card.active {
	background: #fff;
	color: #000;
}

.card.living {
	animation:move 2s ease 1;
	-moz-animation:move 2s ease 1;
	-webkit-animation:move 2s ease 1;
}

@keyframes move {
	from {  -webkit-transform: rotateY(0deg); }
	to { -webkit-transform: rotateY(360deg); }
}

@-moz-keyframes move {
	from {  -webkit-transform: rotateY(0deg); }
	to { -webkit-transform: rotateY(360deg); }
}

@-webkit-keyframes move {
	from {  -webkit-transform: rotateY(0deg); }
	to { -webkit-transform: rotateY(360deg); }
}

.card ul {
	list-style: none;
	padding: 0;
	margin-top: 30px;
}

.card li {
	padding: 5px;
}

.card li:nth-child(2) {
	width: 70px; 
	height: 60px; 
	line-height: 60px;
	font-size: 30px;
	display: inline-block;
}

