.timeline {
	width: 76%;
    height: auto;
    float: right;
    margin-right: 17px;
    margin-top: 10px;
}

.info-box {
	width: 100%;
	height: 150px;
	border-left: 2px solid #D8D6D6;
}

.info-content {
	border: 1px solid #D8D6D6;
	padding: 10px;
	margin-left: 50px;
	position: relative;
	box-shadow: 3px 3px 2px #eee;
	border-radius: 2px;
}

.circle-icon {
    width: 15px;
    height: 15px;
    border-radius: 50%; 
    background: #ACABAB;
    position: absolute;
    left: -59px;
    top: 39%;
    z-index: 999;
}

.line-icon {
	display: block;
	width:53px;
	height: 2px;
	margin:0px auto;
	padding:0px;
	background-color: #C8C8C8;
	overflow:hidden;
	position: absolute;
	left: -53px;
	top: 52px;
}

.first-box {
	width: 100%;
	height: 54px;
	border-left: 2px solid #D8D6D6;
}

.first-box .circle-icon {
	position: absolute;
	left: -58px;
	top: 21%;
}

.first-box .info-content {
	top: -20px;
	box-shadow: none;
	border-width: 0
}

.info-num {
	color: red;
}

.info-title {
	font-size: 16px;
	font-weight: bold;
}

.first-box .circle-icon.active {
	background: #41D5FF;
	animation: shadow 2s linear infinite;
	-webkit-animation: shadow 2s linear infinite;
	-moz-animation: shadow 2s linear infinite;
}

.info-box.active .circle-icon {
	background: #41D5FF;
	box-shadow:  0 0 20px rgb(5, 200, 255);
	animation: shadow 2s linear infinite;
	-webkit-animation: shadow 1s linear infinite;
	-moz-animation: shadow 1s linear infinite;
}

@keyframes shadow {
	0% {
		box-shadow: 0 0 0 transparent;
	}

	50% {
		box-shadow: 0 0 20px rgb(5, 200, 255); 
	}

	100% {
		box-shadow: 0 0 0 transparent; 
	}
}

@-webkit-keyframes shadow {
	0% {
		box-shadow: 0 0 0 transparent;
	}

	50% {
		box-shadow: 0 0 20px rgb(5, 200, 255); 
	}

	100% {
		box-shadow: 0 0 0 transparent; 
	}
}

@-moz-keyframes shadow {
	0% {
		box-shadow: 0 0 0 transparent;
	}

	50% {
		box-shadow: 0 0 20px rgb(5, 200, 255); 
	}

	100% {
		box-shadow: 0 0 0 transparent; 
	}
}

.info-box.active .info-content {
	background: #f3f4f8;
}

.ignore-icon {
	padding: 3px 15px;
    color: #fff;
    background: #99a8bb;
    display: none;
    position: absolute;
    right: 0;
    top: 35%;
    display: none;
    text-align: center;
    border-bottom-left-radius: 16px;
    border-top-left-radius: 16px;
    text-decoration: none;
}

.ignore-icon:hover {
	display: inline-block;
	background: rgb(5, 200, 255);
	text-decoration: none;
	color: #fff;
	font-weight: bold;
	animation: mywidth 2s ease forwards;
	-moz-animation: mywidth 1s ease forwards;
	-webkit-animation: mywidth 1s ease forwards; 
}

@keyframes mywidth {
	from {padding: 3px 15px}
	to {padding: 3px 25px;}
}

@-moz-keyframes mywidth {
	from {padding: 3px 15px}
	to {padding: 3px 25px;}
} 

@-webkit-keyframes mywidth {
	from {padding: 3px 15px}
	to {padding: 3px 25px;}
} 

.info-box.active .ignore-icon {
	display: inline-block;
	cursor: pointer;
}

.font-style {
	 font-weight: bold;
}

.time-span {
	margin-left: 30px;
