.info-list {
	width: 20%;
    height: 500px;
    float: left;
	background: #f6f7fb;
	border-radius: 4px;
}

.info-list li{
	border: 1px solid #eee;
	border-collapse: collapse;
	cursor: pointer;
}

.list-icon {
	float: right;
    width: 28px;
    text-align: center;
    height: 20px;
    line-height: 20px;
    background-color: #ff9192;
    border-radius: 44%;
    color: #fff;
}

.info-list li:nth-child(1) {
	border-top-left-radius: 4px;
	border-top-right-radius: 4px;
}

.info-list a {
	padding: 20px 20px;
	width: 100%;
	height: 100%;
	display: inline-block;
	text-decoration: none;
	position: relative;
	font-size: 15px;
	color: #336189;
}

.info-list a.active {
	background: rgba(149, 147, 147, 0.1);
	font-weight: bold;
	color: #000;
}

.info-list a:hover {
	background: rgba(149, 147, 147, 0.1);
	font-weight: bold;
	color: #000;
}

.info-list a:hover .list-icon {
	animation: rotate 1s ease 1;
	-moz-animation: rotate 1s ease 1;
	-webkit-animation: rotate 1s ease 1;
}

@keyframes rotate {
	from {  -webkit-transform: rotateZ(0deg); }
	to { -webkit-transform: rotateZ(360deg); }
}

@-moz-keyframes rotate {
	from {  -webkit-transform: rotateZ(0deg); }
	to { -webkit-transform: rotateZ(360deg); }
}

@-webkit-keyframes rotate {
	from {  -webkit-transform: rotateZ(0deg); }
	to { -webkit-transform: rotateZ(360deg); }
}


.move-line {
	width: 4px;
	height: 63px;
	background: #6ED7F6;
	display: none;
	position: absolute;
	top: 0;
	left: 0;
	display: none;
	z-index: 999;
}

.info-list a:hover .move-line {
	display: inline-block;
}

.info-list a.active .move-line {
	display: inline-block;
}

