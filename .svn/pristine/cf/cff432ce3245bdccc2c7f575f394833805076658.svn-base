/* 顶部的card */
.main-card {
	width: 100%;
	height: 30%;
	background: #fff;
	overflow: hidden;
	margin-bottom: 50px;
}

.card {
	float: left;
	width: 16.5%;
    height: 180px;
	background: #f6f7fb;
	cursor: pointer;
	text-align: center;
	border: 1px solid #ececee;
    border-collapse: collapse;
    z-index: 999;
}

.card.active, .card.living {
	background: #fff;
}

.card ul {
	list-style: none;
	padding: 0;
	margin-top: 30px;
}

.card li {
	padding: 5px;
}

.card li:nth-child(2) {
	width: 70px; 
	height: 60px; 
	line-height: 60px;
	font-size: 30px;
	display: inline-block;
}

/* 底部左侧信息列表 */
.info-list {
	width: 20%;
    height: 500px;
    float: left;
	background: #f6f7fb;
	border-radius: 4px;
}

.info-list li{
	border: 1px solid #eee;
	border-collapse: collapse;
	cursor: pointer;
}

.list-icon {
	float: right;
    width: 28px;
    text-align: center;
    height: 20px;
    line-height: 20px;
    background-color: #ff9192;
    border-radius: 44%;
    color: #fff;
}

.info-list li:nth-child(1) {
	border-top-left-radius: 4px;
	border-top-right-radius: 4px;
}

.info-list a {
	padding: 20px 20px;
	width: 100%;
	height: 100%;
	display: inline-block;
	text-decoration: none;
	position: relative;
	font-size: 15px;
	color: #336189;
}
.info-list a:hover {
	background: rgba(0,0,0,0.1);
	font-weight: bold;
	color: #000;
}

.info-list a.active {
	background: rgba(0,0,0,0.1);
	font-weight: bold;
	color: #000;
}

.move-line {
	width: 4px;
	height: 63px;
	background: #60beda;
	display: none;
	position: absolute;
	top: 0;
	left: 0;
	display: none;
}

.info-list a:hover .move-line {
	display: inline-block;
}

.info-list a.active .move-line {
	display: inline-block;
}

/* 时间轴 */
.timeline {
	width: 76%;
    height: auto;
    float: right;
    margin-right: 17px;
    margin-top: 10px;
}

.info-box {
	width: 100%;
	height: 150px;
	border-left: 1px solid #D8D6D6;
}

.info-content {
	border: 1px solid #D8D6D6;
	padding: 10px;
	margin-left: 50px;
	position: relative;
	box-shadow: 3px 3px 2px #eee;
	border-radius: 2px;
}

.circle-icon {
    width: 15px;
    height: 15px;
    border-radius: 50%;
    background: #ACABAB;
    position: absolute;
    left: -59px;
    top: 39%;
    z-index: 999;
}

.line-icon {
	display: block;
	width:53px;
	height:1px;
	margin:0px auto;
	padding:0px;
	background-color:#ACABAB;
	overflow:hidden;
    position: absolute;
    left: -53px;
    top: 52px;
}

.first-box {
	width: 100%;
	height: 54px;
	border-left: 1px solid #D8D6D6;
}

.first-box .circle-icon {
	position: absolute;
	left: -58px;
	top: 21%;
}

.first-box .info-content {
	top: -20px;
	box-shadow: none;
	border-width: 0
}

.info-num {
	color: red;
}

.info-title {
	font-size: 16px;
	font-weight: bold;
}

.info-box.active .circle-icon {
	background: #63bdd7;
}

.info-box.active .info-content {
	background: #f3f4f8;
}

.ignore-icon {
	padding: 3px 15px;
    border-radius-left: 20px;
    color: #fff;
    background: #99a8bb;
    display: none;
    position: absolute;
    right: 0;
    top: 35%;
    display: none;
    text-align: center;
    border-bottom-left-radius: 16px;
    border-top-left-radius: 16px;
}

.info-box.active .ignore-icon {
	display: inline-block;
	cursor: pointer;
}

.font-style {
	 font-weight: bold;
}

.time-span {
	margin-left: 30px;
}